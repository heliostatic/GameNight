<h3>Friend search results</h3>
  <div class="friend_results clearfix">
    <% if @users.count > 0 %>
      <p class="notice user_count"><%= pluralize(@users.count, "user") %> found.</p>
      <%= render :partial => '/users/search_results', :locals => {:users => @users}  %>
    <% else %> 
      <p>No one with the email <%= @email %> has signed up with Game Night</p>
      <%= form_tag invite_users_path do %>
        <%= label_tag "Would you like to invite them?" %>
        <%= hidden_field_tag :email, @email %>
        <%= submit_tag "Invite #{@email} to Game Night!", :class => "btn btn-primary btn-large" %> 
      <% end %>
    <% end %>
  </div>

<div class="friend_search clearfix">
  <h4>Search for new friends by e-mail</h4>
  <%= render :partial => '/users/search_form' %>
</div>

