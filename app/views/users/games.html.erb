<h2><%= @user.name %></h2>

<!-- Check for user's game list. Display if not empty -->
<% if @user.games.empty? %>
	<p>You have no games added.</p>
<% else %>
	<ul class="game_list">
	<% @user.games.each do |g| %>
		<li><%= g.name %>
			<%= link_to "Remove game", remove_game_user_path(:game => g), :method => "remove_game", :class => "remove_game", :id => "remove_game_" + g.id.to_s %>
		</li>
	<% end %>
	</ul>
<% end %>

<% if user_signed_in? && (current_user == @user) %>
	<%= render "games/form" %>
<% end %>