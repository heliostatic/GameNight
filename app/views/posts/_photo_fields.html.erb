<fieldset class="photo">
  <h3>Photo:</h3>
  <div class="field">
    <%= p.label :title, "Photo Title" %>
    <%= p.text_field :title %>
  </div>
  <div class="field">
    <%= p.label :image, "File Upload" %>
    <%= p.file_field :image %>
  </div>
  <div class="field">
    <%= p.label :caption, "Photo Caption" %>
    <%= p.text_field :caption %>
  </div>
  <div class="field destroy">
    <%= p.link_to_remove "Remove this photo" %>
  </div>

</fieldset>

