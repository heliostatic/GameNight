<% if night.users.count > 0 %>
        <h5>Players:</h5>
            <ul>
                <% for user in night.users %>
                    <% if user == current_user %>
                        <li>You</li>
                    <% else %>
                        <li><%= link_to user.name, user, :id => "night_player_list_#{user.id}" %></li>
                    <% end %>
                <% end %> 
            </ul>
<% else %>
    <p>Add some friends to you're game night</p>
<% end %>